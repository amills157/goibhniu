FROM mysql:8.0.29

COPY Databases/Test.sql /tmp/
COPY Databases/joomla_db.sql /tmp/

RUN chown mysql /tmp/*.sql

COPY Scripts/mysql_entrypoint.sh /usr/local/bin/docker-entrypoint.sh

RUN chmod +x /usr/local/bin/docker-entrypoint.sh

ENTRYPOINT ["docker-entrypoint.sh"]

EXPOSE 3306 33060
CMD ["mysqld"]
